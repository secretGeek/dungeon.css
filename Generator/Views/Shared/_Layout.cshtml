<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(ViewBag.Title ?? "Dungeon.css")</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dungeon.css", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @Scripts.Render("~/bundles/jquery")
        @RenderBody()
        <hr />
        <footer class="noprint">
            <p><em><a href='https://github.com/secretGeek/dungeon.css/'>Dungeon.css</a>: map layout generated by <a href='http://www.odedwelgreen.com/karcero/'>Karcero</a>, rendering/themes by <a href="http://secretGeek.net">secretGeek</a> under an <a href='https://raw.githubusercontent.com/secretGeek/dungeon.css/master/LICENSE'>MIT License.</a></em></p>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
